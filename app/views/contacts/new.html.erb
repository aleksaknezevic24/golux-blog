
<%= form_for @contact, url: {action: "create"} do |f| %>
  <div class="form-group">
    <div class="col-md-8">
      <%= f.label :subject %> <br>
      <%= f.text_field :subject, label_class: "custom-class" %>
    </div>
  </div>
  <div>
    <%= f.hidden_field :email, value: current_user.id %>
  </div>

<div class="form-group">
  <div class="col-md-8">
    <%= f.label :message %>
    <%= f.text_area :message, class: "form-control", label_class: "custom-class" %>
  </div>
  </div>
  <div class="form-group">
    <div class="col-md-2">
    <%= f.submit "submit",  class: "btn btn-default btn-primary" %>
  </div>
</div>
<% end %>