
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div class="forme">
<div class="container-fluid" style="min-width: 220px; ">
<div class="container-page">        
  <div class="col-lg-12">

  <div class="form-group col-md-12">
    <%= f.label :email, class:"label-medium" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
  </div>

  <div class="form-group col-md-12 ">
    <%= f.label :password, class:"label-medium" %><br />
    <%= f.password_field :password, autocomplete: "off", class:"form-control" %>
  </div>
  
 <br>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group col-md-12 ">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class:"label-medium", style:"color: gray;" %>
    </div>
  <% end -%>

  <div class="actions, form-group col-md-12 ">
    <%= f.submit "Log in", class:"btn btn-lg" %>
  </div>
</div>
</div>
</div>
</div>
<% end %>

