
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true })  do |f| %>
  <%= devise_error_messages! %>
  <div class="forme">
<div class="container-fluid" style="min-width: 200px; ">
<div class="container-page">        
  <div class="col-lg-12">

  <div class="form-group col-md-6 ">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
  
  <div class="form-group col-md-6 ">
    <%= f.label :email, class:"label-medium" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
  </div>

  <div class="form-group col-md-6 ">
    <%= f.label :first_name, class:"label-medium" %><br />
    <%= f.text_field :first_name, autofocus: true, class:"form-control" %>
  </div>

  <div class="form-group col-md-6 ">
    <%= f.label :last_name, class:"label-medium" %><br />
    <%= f.text_field :last_name, autofocus: true, class:"form-control" %>
  </div>

  <div class="form-group col-md-6 ">
    <%= f.label :password, class:"label-medium" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class:"form-control" %>
  </div>

  <div class="form-group col-md-6 " >
    <%= f.label :password_confirmation, class:"label-medium" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control" %>
  </div>

   <div class="form-group col-md-6 ">
   <%= f.label :subscribe, class:"label-medium" %>
   <%= f.check_box :status, {}, 1, 0 %>
 </div>

  <div class="actions, form-group col-md-6 " >
    <%= f.submit "Sign up", class:"btn btn-lg" %>
  </div>

</div>
</div>
</div>
</div>
<% end %>

